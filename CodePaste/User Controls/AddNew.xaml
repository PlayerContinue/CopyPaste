<UserControl x:Class="CodePaste.User_Controls.AddNew"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Name="Main_Grid">
        <TextBox Name="Title" HorizontalAlignment="Left" Height="23" Margin="0,80,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=Main_Grid}"/>
        <TextBox Name="Description" HorizontalAlignment="Left" 
                   Margin="0,108,0,0" 
                   TextWrapping="Wrap" 
                   Text="Description" 
                   VerticalAlignment="Top" 
                   Width="{Binding ActualWidth, ElementName=Main_Grid}" 
                 Height="142"
                 AcceptsReturn="True"/>
        <Button Content="Add" Click="AddToXML" HorizontalAlignment="Left" Margin="0,255,0,0" VerticalAlignment="Top" Width="{Binding ActualWidth, ElementName=Main_Grid}" Height="35"/>

    </Grid>
</UserControl>
